function join(){
	var roomId = 1010;
	var userId = user.id;
	$.ajax({
		url: '/rooms/' + roomId + '/join',
		type: 'get',
		data: {
			"userId": userId
		},
		async: false,
		success: function(data, status){
			if (data.code == 1){
				sendChangeMessage(roomId);
				$('#toRoom').click();
			}else{
				alert(data.message);
			}
		}
	});
}

